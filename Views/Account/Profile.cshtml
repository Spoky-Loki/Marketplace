@{
    ViewData["Title"] = "Профель";
}

@model ProfileViewModel
 
<h2>Профель</h2>
 
<form asp-action="Profile" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите имя</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Surname">Введите фамилию</label>
            <input type="text" asp-for="Surname" />
            <span asp-validation-for="Surname" />
        </div>
        <div class="form-group">
            <label asp-for="Address">Введите адрес</label>
            <input type="text" asp-for="Address" />
            <span asp-validation-for="Address" />
        </div>
        <div class="form-group">
            <label asp-for="Phone">Введите номер телефона</label>
            <input type="text" asp-for="Phone" />
            <span asp-validation-for="Phone" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Текущий Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="newEmail">Введите новый Email</label>
            <input type="text" asp-for="newEmail" />
            <span asp-validation-for="newEmail" />
        </div>
        <div class="form-group">
            <label asp-for="newPassword">Введите новый пароль</label>
            <input asp-for="newPassword" />
            <span asp-validation-for="newPassword" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите текущий пароль для потверждения</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

